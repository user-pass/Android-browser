<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AFADAD"
    tools:context="com.example.nimbusbrowser.UrlSearch">

    <EditText
        android:id="@+id/input_search_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/search_url_button"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/search_url_button"
        android:background="#D1C4E9"
        android:fontWeight="200"
        android:paddingLeft="15dp"
        android:ems="10"
        android:hint="@string/Search"
        android:inputType="textUri"
        android:textColor="#000000"
        android:textColorHint="#2B2B2B" />

    <Button
        android:id="@+id/search_url_button"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="@drawable/my_button_bg"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:text="@string/SearchWeb"
        android:textColor="#000000"
        android:textSize="14sp" />

    <WebView
        android:id="@+id/SearchWebsite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="48dp" />
</RelativeLayout>